<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gris1"
    tools:context=".detalle">

  <ImageView
      android:id="@+id/imageView5"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:srcCompat="@drawable/banner"
      tools:layout_editor_absoluteX="0dp"
      tools:layout_editor_absoluteY="-319dp"
      tools:ignore="MissingConstraints" />

  <ImageView
      android:id="@+id/imageView6"
      android:layout_width="36dp"
      android:layout_height="36dp"
      android:layout_marginStart="4dp"
      android:layout_marginTop="56dp"
      android:rotationY="180"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/ic_chevron_right" />

  <TextView
      android:id="@+id/textView5"
      android:layout_width="81dp"
      android:layout_height="30dp"
      android:layout_marginStart="4dp"
      android:layout_marginTop="60dp"
      android:text="@string/regresar"
      android:textColor="@color/azul1"
      android:textSize="16sp"
      android:textStyle="bold"
      app:layout_constraintStart_toEndOf="@+id/imageView6"
      app:layout_constraintTop_toTopOf="parent" />

  <ImageView
      android:id="@+id/imageView7"
      android:layout_width="58dp"
      android:layout_height="35dp"
      android:layout_marginTop="60dp"
      android:layout_marginEnd="16dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/ic_heart" />

  <ImageView
      android:id="@+id/imageView8"
      android:layout_width="49dp"
      android:layout_height="34dp"
      app:layout_constraintEnd_toStartOf="@+id/imageView7"
      app:srcCompat="@drawable/ic_share_alt"
      tools:layout_editor_absoluteY="61dp"
      tools:ignore="MissingConstraints" />

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="416dp"
      android:layout_height="524dp"
      tools:ignore="MissingConstraints"
      tools:layout_editor_absoluteX="0dp"
      tools:layout_editor_absoluteY="131dp">

    <androidx.cardview.widget.CardView
        android:layout_width="362dp"
        android:layout_height="127dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="18dp"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        tools:layout_editor_absoluteX="16dp">

      <TextView
          android:id="@+id/textView19"
          android:layout_width="match_parent"
          android:layout_height="107dp"
          android:fontFamily="@font/abeezee"
          android:text="Lorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsumLorem ipsum"
          android:textAlignment="center"
          android:layout_marginTop="18dp"

          android:textColor="@color/black" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="356dp"
        android:layout_height="122dp"
        app:cardCornerRadius="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.266"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="16dp" />

  </androidx.constraintlayout.widget.ConstraintLayout>

  <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_constraintTop_toTopOf="parent">

    <ImageView
        android:id="@+id/imageView14"
        android:layout_width="122dp"
        android:layout_height="140dp"
        app:srcCompat="@drawable/libro2"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="104dp"
        tools:ignore="MissingConstraints" />

  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>